// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url       = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL")
}

enum DETAILS_TYPE {
  FLIGHT
  TRANSFER
  REN_CAR
  BOAT
  HOTEL
  TRIP
  OTHER
}

enum LANGUAGE_TYPE {
  ES
  EN
}

enum ROLE_TYPE {
  ADMIN
  USER
  VIEWER
}

model User {
  id                 Int      @id @default(autoincrement())
  name               String
  email              String   @unique
  password           String
  phone              String?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  avatar             String? 
  language           LANGUAGE_TYPE @default(ES)
  role               ROLE_TYPE @default(USER)
  itinerary  Itinerary[]
}

model Itinerary {
  id                 Int      @id @default(autoincrement())
  title              String
  days               Int      @default(0)
  date               DateTime
  startDate          DateTime @updatedAt
  endDate            DateTime @updatedAt
  image              String?
  user      User     @relation(fields: [userId], references: [id])
  userId             Int
  items              Details[]
  budget             BudgetItem[]
}

model Details {
  id               Int      @id @default(autoincrement())
  type             DETAILS_TYPE @default(FLIGHT)
  days             Int       @default(0)
  startDate        DateTime?  @updatedAt
  endDate          DateTime? @updatedAt
  departure        String?
  departureLabel   String?
  destination      String?
  destinationLabel String?
  arrivalTime      String?
  stars            Int?
  placeUrl         String?
  numberFlight     String?
  description      String[]
  imageUrl         String?
  cityName         String?
  region           String?
  country          String?
  name             String?
  collapse         Boolean  @default(false)
  itineraryId      Int
  itinerary        Itinerary @relation(fields: [itineraryId], references: [id])
}

model BudgetItem {
  id         Int      @id @default(autoincrement())
  expensive Int
  types     String[]
  itinerary Itinerary @relation(fields: [itineraryId], references: [id])
  itineraryId Int
}