// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url       = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL")

}

model User {
  id           Int      @id @default(autoincrement())
  name         String
  email        String   @unique
  password     String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  avatar       String?
  itinerary  Itinerary[]

}

model Itinerary {
  id        Int      @id @default(autoincrement())
  title     String
  days      Int      @default(0)
  date      DateTime
  startDate DateTime @updatedAt
  endDate   DateTime @updatedAt
  image     String?
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  items     Details[]
}

enum DetailsType {
  FLIGHT
  TRANSFER
  REN_CAR
  BOAT
  HOTEL
  TRIP
}


model Details {
  id           Int      @id @default(autoincrement())
  type         DetailsType @default(FLIGHT)
  title        String
  days         Int      @default(0)
  startDate    DateTime @updatedAt
  endDate      DateTime @updatedAt
  departure    String?
  destination  String?
  stars        Int?
  placeUrl     String?
  numberFlight String?
  description  String[]
  imageUrl     String?
  cityName     String?
  region       String?
  country      String?
  name         String?
  collapse     Boolean  @default(false)
  itineraryId  Int
  itinerary    Itinerary @relation(fields: [itineraryId], references: [id])
}

